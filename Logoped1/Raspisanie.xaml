<Window x:Class="Logoped1.Raspisanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logoped1"
        mc:Ignorable="d"
        Height="500" Width="900">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Новое расписание" Name="btnOpenFile" Style="{StaticResource EditBtn}" VerticalAlignment="Top" HorizontalAlignment="Right"
                Click="btnOpenFile_Click" Width="165" Height="45" Margin="20 0 20 0" FontSize="12"/>
            <Button Content="Сохранить расписание" Name="btnSaveFile" Style="{StaticResource EditBtn}" VerticalAlignment="Top" HorizontalAlignment="Right"
                Click="btnSaveFile_Click" Width="165" Height="45" Margin="0 0 20 0" FontSize="12"/>
        </StackPanel>
        <TextBox Name="txtEditor" Panel.ZIndex="-1" Margin="0,45,0,0"/>
    </Grid>
</Window>
